.chat-container {
  height: 100vh;
  display: flex;
  flex-direction: column;
}

.header {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  padding: 20rpx;
  background: #FFFFFF;
  border-bottom: 2rpx solid #ddd;
  z-index: 900;
  text-align: center;
  color: #1976D2;
  font-size: 48rpx;
}

.chat-history {
  flex: 1;
  max-height: calc(100vh - 300rpx);
  overflow-y: scroll;
  padding: 40rpx 0;
}

.message-container {
  display: flex;
  flex-direction: column;
  margin: 20rpx 40rpx;
}

.user-message-container {
  align-items: flex-end;
}

.assistant-message-container {
  align-items: flex-start;
}

.avatar {
  width: 80rpx;
  height: 80rpx;
  border-radius: 50%;
  margin-bottom: 10rpx;
}

.user-message {
  background: #1976D2;
  color: white;
  border-radius: 30rpx;
  padding: 20rpx 28rpx;
  max-width: 70%;
}

.assistant-message {
  background: #FFFFFF;
  border: 2rpx solid #ddd;
  border-radius: 30rpx;
  padding: 20rpx 28rpx;
  max-width: 70%;
}

.thinking-indicator {
  background: #FFFFFF;
  border: 2rpx solid #ddd;
  border-radius: 30rpx;
  padding: 20rpx 28rpx;
  max-width: 70%;
  color: #666;
  text-align: center;
  margin: 20rpx 40rpx;
}

.new-chat {
  position: fixed;
  bottom: 200rpx;
  width: 100%;
  text-align: center;
}

.new-chat button {
  padding: 16rpx 32rpx;
  background: #1976D2;
  color: white;
  border-radius: 16rpx;
}

.input-area {
  position: fixed;
  bottom: 100rpx;
  left: 0;
  width: 100%;
  padding: 20rpx 40rpx;
  display: flex;
  gap: 16rpx;
}

.input-area input {
  flex: 1;
  padding: 20rpx;
  border: 2rpx solid #ddd;
  border-radius: 16rpx;
}

.input-area button {
  padding: 20rpx 40rpx;
  background: #1976D2;
  color: white;
  border-radius: 16rpx;
}

.button-toolbar {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  padding: 10rpx 40rpx;
  display: flex;
  gap: 16rpx;
  justify-content: center;
  border-top: 2rpx solid #ddd;
}

.button-toolbar button {
  padding: 16rpx 32rpx;
  background: rgba(25, 118, 210, 0.1);
  color: #1976D2;
  border-radius: 16rpx;
}

.button-toolbar .active {
  background: #1976D2;
  color: white;
}